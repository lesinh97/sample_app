 <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header_logo_link"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header_home_link"), root_path %></li>
        <li><%= link_to t("header_help_link"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("header_user_link"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("header_account_dropdown") %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header_profile_link"), current_user %></li>
              <li><%= link_to t("header_setting_link"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header_logout_link"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header_login_link"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
